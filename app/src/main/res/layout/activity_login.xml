<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    tools:context=".activities.LoginActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/login_icon_w"
        android:layout_height="@dimen/login_icon_h"
        android:layout_marginStart="@dimen/m_xl"
        android:layout_marginTop="@dimen/m_m"
        android:layout_marginEnd="@dimen/m_xl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/popcorn" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m_s"
        android:fontFamily="@font/nunito_extralight"
        android:text="@string/login_title"
        android:textSize="@dimen/font_xxl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/editCorreoLogin"
        android:layout_width="@dimen/m_zero"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/m_s"
        android:layout_marginTop="@dimen/m_xl"
        android:layout_marginEnd="@dimen/m_xl"
        android:ems="10"
        android:fontFamily="@font/nunito_extralight"
        android:hint="@string/login_email_hint"
        android:inputType="textEmailAddress"
        android:maxLength="60"
        android:textSize="@dimen/font_m"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/editPwLogin"
        android:layout_width="@dimen/m_zero"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/m_s"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/m_xl"
        android:ems="10"
        android:fontFamily="@font/nunito_extralight"
        android:hint="@string/login_contrasena_hint"
        android:inputType="textPassword"
        android:maxLength="30"
        android:textSize="@dimen/font_m"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/editCorreoLogin" />

    <CheckBox
        android:id="@+id/checkRecordarLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_extralight"
        android:text="@string/login_check_text"
        android:textColor="@color/gray"
        android:textSize="@dimen/font_s"
        app:layout_constraintBottom_toBottomOf="@+id/txtOlvidoLogin"
        app:layout_constraintStart_toStartOf="@+id/editPwLogin"
        app:layout_constraintTop_toTopOf="@+id/txtOlvidoLogin" />

    <TextView
        android:id="@+id/txtOlvidoLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m_s"
        android:fontFamily="@font/nunito_extralight"
        android:text="@string/login_contrasena_text"
        android:textColor="@color/colorPrimary2"
        android:textSize="@dimen/font_s"
        app:layout_constraintEnd_toEndOf="@+id/editPwLogin"
        app:layout_constraintTop_toBottomOf="@+id/editPwLogin" />

    <Button
        android:id="@+id/btnIngresarLogin"
        android:layout_width="@dimen/m_zero"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/m_xl"
        android:layout_marginTop="@dimen/m_xl"
        android:layout_marginEnd="@dimen/m_xl"
        android:background="@color/colorDanger"
        android:fontFamily="@font/montserrat"
        android:text="@string/login_btn_text"
        android:textColor="@color/blanco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtOlvidoLogin" />

    <TextView
        android:id="@+id/txtRegistrarLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m_xxl"
        android:layout_marginEnd="@dimen/m_xs"
        android:fontFamily="@font/nunito_extralight"
        android:text="@string/login_crearcuenta_text"
        android:textSize="@dimen/font_s"
        app:layout_constraintEnd_toStartOf="@+id/txtRegistrarLoginLinkLogin"
        app:layout_constraintTop_toBottomOf="@+id/btnIngresarLogin" />

    <TextView
        android:id="@+id/txtRegistrarLoginLinkLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_extralight"
        android:text="@string/login_crearcuenta_btn_text"
        android:textColor="@color/colorPrimary2"
        android:textSize="@dimen/font_s"
        app:layout_constraintBottom_toBottomOf="@+id/txtRegistrarLogin"
        app:layout_constraintEnd_toEndOf="@+id/btnIngresarLogin"
        app:layout_constraintTop_toTopOf="@+id/txtRegistrarLogin" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/m_xl"
        android:layout_height="@dimen/m_xl"
        android:layout_marginStart="@dimen/m_l"
        app:layout_constraintBottom_toBottomOf="@+id/editCorreoLogin"
        app:layout_constraintEnd_toStartOf="@+id/editCorreoLogin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editCorreoLogin"
        app:srcCompat="@drawable/ic_baseline_email_24" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="@dimen/m_xl"
        android:layout_height="@dimen/m_xl"
        android:layout_marginStart="@dimen/m_l"
        app:layout_constraintBottom_toBottomOf="@+id/editPwLogin"
        app:layout_constraintEnd_toStartOf="@+id/editPwLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editPwLogin"
        app:srcCompat="@drawable/ic_baseline_lock_24" />
</androidx.constraintlayout.widget.ConstraintLayout>